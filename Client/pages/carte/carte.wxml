<view class='left-menu'>
  <view class="list-left-menu">
    <view class="list-left-menu-box-selected">
      <view class="list-menu-name">selected</view>
    </view>
    <view wx:for="{{MenuType}}" wx:key="Sort" class="list-left-menu-box-unselect" data-index="{{index}}">
      <view class="list-menu-name">{{item}}</view>
    </view>
  </view>
</view>
<scroll-view class='menu_list'>
  <view class='content_list' wx:for="{{MenuType}}" wx:key="Sort">
    <view class='content_img'>
      <image mode='widthFix' lazy-load='true' src='https://www.qqmxd.com/static/{{img}}'></image>
    </view>
    <view class='content_name'>
      <view style='font-size:32rpx'>{{name}}</view>
      <view style='color:red;font-size:30rpx'>¥ {{price}}</view>
    </view>
  </view>
</scroll-view>
<view class='Cart'>
  <text>1234</text>
  <button>
    <text>去结算</text>
  </button>
</view>